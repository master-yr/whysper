// Audio constants
const SAMPLE_RATE: u32 = 16000;
const FRAME_SIZE: usize = 512;
const HOP_SIZE: usize = 160;
const N_MELS: usize = 80;
const N_FFT: usize = 512;

// Model constants
const VOCAB_SIZE: usize = 30;
const HIDDEN_DIM: usize = 128;

// Training constants
const TRAIN_SPLIT: f32 = 0.8;
